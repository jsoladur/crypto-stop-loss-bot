{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run backend",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": [
        "dev",
        "src/crypto_trailing_stop/main.py",
        "--app",
        "app",
        "--reload",
        "--host",
        "0.0.0.0"
      ],
      "justMyCode": false
    },
    {
      "name": "CLI: Download data",
      "type": "debugpy",
      "request": "launch",
      "program": "src/crypto_trailing_stop/scripts/main.py",
      "args": ["download-data", "ETH/EUR"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "CLI: Backtesting",
      "type": "debugpy",
      "request": "launch",
      "program": "src/crypto_trailing_stop/scripts/main.py",
      "args": ["backtesting", "SUI/EUR", "--adx-threshold=25", "--enable-tp", "--sl-multiplier=3.0", "--tp-multiplier=5.1"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Integration tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO", "tests/integration_tests"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Unit Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO", "tests/unit_tests"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Specific test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-x",
        "--log-cli-level=INFO",
        "-k",
        "should_create_market_sell_order_when_auto_exit_sell_or_bearish_divergence_1h_signal[False-True]"
      ],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    }
  ]
}
