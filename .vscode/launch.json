{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run backend",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": [
        "dev",
        "src/crypto_trailing_stop/main.py",
        "--app",
        "app",
        "--reload",
        "--host",
        "0.0.0.0"
      ],
      "justMyCode": false
    },
    {
      "name": "CLI: Download data",
      "type": "debugpy",
      "request": "launch",
      "program": "src/crypto_trailing_stop/scripts/cli.py",
      "args": ["download-data", "ETH/USDT", "--exchange=mexc"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "CLI: Backtesting",
      "type": "debugpy",
      "request": "launch",
      "program": "src/crypto_trailing_stop/scripts/cli.py",
      "args": [
        "backtesting",
        "ETH/USDT",
        "--adx-threshold=15",
        "--enable-tp",
        "--sl-multiplier=2.5",
        "--tp-multiplier=4.0"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
     {
      "name": "CLI: Research",
      "type": "debugpy",
      "request": "launch",
      "program": "src/crypto_trailing_stop/scripts/cli.py",
      "args": [
        "research",
         "DOGE/USDT",
         "--min-sqn=1.8",
         "--min-profit-factor=1.5",
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Integration tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO", "tests/integration_tests"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Unit Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO", "tests/unit_tests"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Limit Sell Order Guard",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-x",
        "--log-cli-level=INFO",
        "tests/integration_tests/tasks/limit_sell_order_guard_task_service_test.py"
      ],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Specific test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-x",
        "--log-cli-level=INFO",
        "-k",
        "should_create_market_sell_order_when_stop_loss_triggered"
      ],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}
