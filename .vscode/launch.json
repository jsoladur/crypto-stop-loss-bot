  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run backend",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": [
        "dev",
        "src/crypto_trailing_stop/main.py",
        "--app",
        "app",
        "--reload",
        "--host",
        "0.0.0.0"
      ],
      "justMyCode": false
    },
    {
      "name": "Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Integration tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO", "tests/integration_tests"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Unit Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO", "tests/unit_tests"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Specific test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO", "-k", "should_set_stop_loss_percent_service_properly"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    }
  ]
}
